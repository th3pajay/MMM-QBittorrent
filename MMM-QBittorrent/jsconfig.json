{
  "compilerOptions": {
    "checkJs": true,
    "noEmit": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "*.js",
    "types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
